CREATE TABLE singers (id INTEGER PRIMARY KEY AUTOINCREMENT,
stage_name TEXT,
real_name TEXT,
country TEXT,
group_id INTEGER,
project_id INTEGER);

INSERT INTO singers VALUES (1,"RM", "Kim Namjoon", "South Korea", 1,1);
